<% var s="1" %>

<% question.forEach(function(campground){ %>
      <div class="card askquestion">
        
        	<div class="card-body">
          	<div class="text-left">
          		<h5 class="card-title"><%= campground.question %></h5>
          		<cite title="Source Title">Question By <%= campground.author.username %></cite>
          	</div>
          	
          	<hr>
          	<p class="card-text"  href="">
               <a href="/question/<%= campground._id %>">Answered BY <%= campground.answer.length%></a> 
              </p>
              <button href="#" class="btn btn-primary" id="<%= s %>" onclick="show_hide(this.id)">Write</button>
            
         
          
          <!-- <button href="/" class="btn btn-primary" id="textinput" onclick="show_hide()"class="btn btn-success m-2" style="width:100px; margin-bottom: auto; ">Write</button> -->
          <form action="/<%=campground._id%>/answer" method="post" id="textarea<%= s %>" style="display: none">
            <textarea name="answer">
            
            </textarea>
            <script>
              tinymce.init({
                selector: 'textarea',
                plugins: 'a11ychecker advcode casechange formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
                toolbar: 'a11ycheck addcomment showcomments casechange checklist code formatpainter pageembed permanentpen table',
                toolbar_mode: 'floating',
                tinycomments_mode: 'embedded',
                tinycomments_author: 'Author name',
              });
            </script>
            <BUTTON type="submit" id="answerbutton<%= s %>" class="btn btn-primary"style="display: none; margin-left:15px">Submit</BUTTON>
          </form>
        </div>
      </div>
      <% s++ %>
      <% }) %>
</div>



